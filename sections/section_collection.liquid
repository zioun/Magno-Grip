<!-- Swiper Slider Code -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />

<style>
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
  .container {
    max-width: 1200px;
    margin: auto;
  }
  .swiper_area{
    background-color: #f6f6f6;
  }
  .collection_swiper_area{
    background-color: #ffffff !important;
    padding-bottom: 30px;
  }
  .swiper {
    width: 100%;
    height: 100%;
    padding: 50px 0px;
  }

  .swiper-slide {
    text-align: center;
    font-size: 18px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #ffffff;
    border-radius: 5px;
  }
  .collection-card-text-area{
    padding: 0px;
  }
  .collection-seller-title h1{
    padding: 50px 0px 0px 0px;
    text-align: center;
    font-weight: bolder;
  }

  .swiper-slide img {
    display: block;
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 5px;
  }
  .swiper-slide h1{
    font-size: 18px;
    text-align: start;
    font-weight: bold;
    color: #221F22;
  }
  .swiper-slide p{
    text-align: start;
  }
  .collection-card-item-area{
    position: relative;
  }
  

  .swiper_area .swiper-button-next::after,
  .swiper-button-prev::after {
    display: none;
  }
  .swiper_area {
    position: relative;
  }
  .swiper-button-next {
    position: absolute;
    top: 60%;
    left: calc(50% + 630px);
    transform: translateX(-50%);
  }
  .swiper-button-prev {
    position: absolute;
    top: 60%;
    left: calc(50% - 630px);
    transform: translateX(-50%);
  }
  .swiper-button-next svg, .swiper-button-prev svg{
    color: #FDCB2C;
  }
  .swiper-pagination-bullet-active{
    background-color: #FDCB2C !important;
  }
  .showall_area{
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .showall{
    background-color: #FDCB2C;
    padding: 10px 30px;
    color: #221F22;
    border-radius: 5px;
  }
  .collection_title{
    background-color: #FDCB2C;
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    padding: 20px 20px;
  }
  

</style>

<section class="swiper_area collection_swiper_area">
  <div class="container">
    <div class="collection-seller-title">
      <h1>Our Collection</h1>
    </div>
    <div class="swiper collectionProduct">
      <div class="swiper-wrapper">
      {% assign collection = section.settings.collection_list %}
      {% for product in collection %}
        <div class="swiper-slide collection-card-item-area">
          <div>
            {{ product.featured_image |  image_url: width: 800 |  image_tag  }}
            <div class="collection-card-text-area">
              <a class="collection_title" href="{{ product.url }}"><h1>{{ product.title }}</h1></a>
            </div>
          </div>
        </div>
      {% endfor %}
      </div>
      <div class="swiper-pagination"></div>
    </div>
    <div class="showall_area">
      <a class="showall" href="/collections/all">Show All Product</a>
    </div>
  </div>
  <div>
    <div class="swiper-button-next">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="size-6">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m8.25 4.5 7.5 7.5-7.5 7.5" />
      </svg>
    </div>
    <div class="swiper-button-prev">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="size-6">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M15.75 19.5 8.25 12l7.5-7.5" />
      </svg>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Collection List",
    "settings": [
      {
        "type": "collection_list",
        "id": "collection_list",
        "label": "Collection List"
      }
    ]
  }
{% endschema %}

<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>

<script>
  var swiper = new Swiper(".collectionProduct", {
    slidesPerView: 3,
    spaceBetween: 30,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },autoplay: {
        delay: 4000,
        disableOnInteraction: false,
      },
  });
</script>