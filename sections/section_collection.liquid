<!-- Swiper Slider Code -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />

<style>
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
  .container {
    max-width: 1200px;
    margin: auto;
  }
  .swiper_area{
    background-color: #f6f6f6;
  }
  .collection_swiper_area{
    background-color: #ffffff !important;
    padding-bottom: 30px;
  }
  .swiper {
    width: 100%;
    height: 100%;
    padding: 50px 0px;
  }

  .swiper-slide {
    text-align: center;
    font-size: 18px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #ffffff;
    border-radius: 5px;
  }
  .collection-card-text-area{
    padding: 0px;
  }
  .collection-seller-title h1{
    padding: 50px 0px 0px 0px;
    text-align: center;
    font-weight: bolder;
  }

  .swiper-slide img {
    display: block;
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 5px;
  }
  .swiper-slide h1{
    font-size: 18px;
    text-align: start;
    font-weight: bold;
    color: #221F22;
  }
  .swiper-slide p{
    text-align: start;
  }
  .collection-card-item-area{
    position: relative;
  }
  .collection-card-text-area a{
    background-color: #FDCB2C;
    width: 100%;
    text-decoration: none;
    color: #221F22;
    font-weight: bold;
    position: absolute;
    bottom: 0;
    left: 0;
    text-align: start;
    padding-left: 15px !important;
    border-radius: 0px !important;
  }

  .swiper_area .swiper-button-next::after,
  .swiper-button-prev::after {
    display: none;
  }
  .swiper_area {
    position: relative;
  }
  .swiper-button-next {
    position: absolute;
    top: 60%;
    left: calc(50% + 630px);
    transform: translateX(-50%);
  }
  .swiper-button-prev {
    position: absolute;
    top: 60%;
    left: calc(50% - 630px);
    transform: translateX(-50%);
  }
  .swiper-button-next svg, .swiper-button-prev svg{
    color: #FDCB2C;
  }
  .swiper-pagination-bullet-active{
    background-color: #FDCB2C !important;
  }

</style>

